{
    "env": {
        "node": true,
        "mocha": true,
        "browser": true
    },
    "plugins":[
        "json"],
    "globals": {
        "angular": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}