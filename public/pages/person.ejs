<div class="jumbotron text-center">
    <h1>Add a Person</h1>

    <p>{{ message }}</p>

    <div ng-controller="personController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addPerson()"
                      style="margin-top:30px;">
                    <h3>Add a new Person</h3>

                    <div class="form-group" align="center">
                        <input type="String"
                               class="form-control"
                               placeholder="First Name"
                               ng-model="formData.fname"
                               ng-style="{'width': 300 + 'px'}"></input>
                    </div>
                    <div class="form-group" align="center">
                        <input type="String"
                               class="form-control"
                               placeholder="Last Name"
                               ng-model="formData.lname"
                               ng-style="{'width': 300 + 'px'}"></input>
                    </div>
                    <div class="form-group" align="center">
                        <select ng-model="formData.ageOptions" class="form-control" ng-show="formData.ageOptions" ng-options="option.ages for option in option" ng-style="{'width': 300 + 'px'}">
                        </select>
                    </div>


                    <div class="form-group" align="center">
                        <select ng-model="formData.genderOptions" class="form-control" ng-show="formData.genderOptions" ng-options="option.genders for option in options" ng-style="{'width': 300 + 'px'}">
                        </select>
                    </div>
                    <div class="form-group" align="center">
                        <input type="String"
                               class="form-control"
                               placeholder="address"
                               ng-model="formData.address"
                               ng-style="{'width': 300 + 'px'}"></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Person</button>
                </form>

            </div>
        </div>
    </div>
</div>