
<div class="jumbotron text-center">
    <h1>List All Events</h1>

    <p>{{ message }}</p>
    <div>

    <div ng-controller="personEventController as list">
        <table class ="table table-striped table-bordered align="left" valign="left">

        <thead>
        <th>Event title</th>
        <th>Event Description</th>
        <th>Event Place</th>
        <th>Event Start Date</th>
        <th>Event Finish Date</th>
        <th>Event Status</th>
        <th>Edit/Delete</th>

        </thead>
        <tbody>
        <tr ng-repeat="event in events" >



                <td>{{event.title}}</td>
                <td>{{event.description}}</td>
                <td>{{event.place}}</td>
                <td>{{event.startdate | date:'yyyy-MM-dd'}}</td>
                <td>{{event.finishdate | date:'yyyy-MM-dd'}}</td>
                <td>{{event.status}}</td>
                <td>
                    <button type="button" class="btn btn-default" ng-click="editEvent(event)">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </button>
                    <button type="button" class="btn btn-default" ng-click="delete(event._id)">
                        <span class="glyphicon glyphicon-remove"></span> Remove
                    </button>

                </td>


                <td><input type="text" ng-model=event.title class="form-control input-sm"></input></td>
                <td><input type="text" ng-model=event.description class="form-control input-sm"></input></td>
                <td><input type="text" ng-model=event.place class="form-control input-sm"></input></td>
                <td><input type="text" ng-model=event.startdate class="form-control input-sm"></input></td>
                <td><input type="text" ng-model=event.finishdate class="form-control input-sm"></input></td>
                <td><input type="text" ng-model=event.status class="form-control input-sm"></input></td>


                <td>
                    <button type="button" class="btn btn-primary" ng-click="updateEvent(event)">Save</button>
                    <button type="button" class="btn btn-danger" ng-click="reset()">Cancel</button>
                </td>

        </tr>

        </tbody>
        </table>



</div>
        <div ng-controller="peopleController as list">
            <table class ="table table-striped table-bordered align="right" valign="left">

            <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Edit/Delete</th>

            </thead>
            <tbody>
            <tr ng-repeat="person in people">



                    <td>{{person.fname}}</td>
                    <td>{{person.lname}}</td>
                    <td>{{person.age}}</td>
                    <td>{{person.gender}}</td>
                    <td>{{person.address}}</td>
                    <td>
                        <button type="button" class="btn btn-default" ng-click="editPerson(person)">
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </button>
                        <button type="button" class="btn btn-default" ng-click="delete(person._id)">
                            <span class="glyphicon glyphicon-remove"></span> Remove
                        </button>

                    </td>


                    <td><input type="text" ng-model=person.fname class="form-control input-sm"></input></td>
                    <td><input type="text" ng-model=person.lname class="form-control input-sm"></input></td>
                    <td><input type="text" ng-model=person.age class="form-control input-sm"></input></td>
                    <td><input type="text" ng-model=person.gender class="form-control input-sm"></input></td>
                    <td><input type="text" ng-model=person.address class="form-control input-sm"></input></td>



                    <td>
                        <button type="button" class="btn btn-primary" ng-click="updatePerson(person)">Save</button>
                        <button type="button" class="btn btn-danger" ng-click="reset()">Cancel</button>
                    </td>

            </tr>

            </tbody>
            </table>

        </div>

        <button type="submit" class="btn btn-primary">Add Person</button>
</div>
</div>